<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_700"
    android:paddingEnd="@dimen/margin16"
    android:paddingBottom="@dimen/margin16"
    android:paddingStart="@dimen/margin16"
    android:paddingTop="@dimen/margin8"
    >
    <Button
        android:id="@+id/btnAddPassword"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin8"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_space"
        android:text="@string/add_password"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCancelBtnPass" />

    <Button
        android:id="@+id/btnDeletePassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/delete_password"
        android:textAllCaps="false"
        android:background="@drawable/shape_space"
        android:layout_marginTop="@dimen/margin16"
        app:layout_constraintEnd_toEndOf="@+id/btnAddPassword"
        app:layout_constraintStart_toStartOf="@+id/btnAddPassword"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPassword" />

    <ImageButton
        android:id="@+id/btnCancelBtnPass"
        android:layout_width="@dimen/margin48"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_space"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />
</androidx.constraintlayout.widget.ConstraintLayout>